<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/adaptive_66dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_32dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_weight="1"
            android:id="@+id/payItemTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="@dimen/adaptive_20dp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#232323"
            android:textSize="14sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/payItemTv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="@dimen/adaptive_20dp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#232323"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_32dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_weight="1"
            android:id="@+id/payItemTv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="@dimen/adaptive_20dp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#232323"
            android:textSize="14sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/payItemTv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginLeft="@dimen/adaptive_20dp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#232323"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/gray_gb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>