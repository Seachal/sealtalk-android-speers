<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.caesar.rongcloudspeed.circle.widgets.CircularImage
            android:id="@+id/recommend_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin4dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/m_img1" />

        <TextView
            android:id="@+id/recommend_nicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4dp"
            android:layout_toEndOf="@+id/recommend_avatar"
            android:singleLine="true"
            android:text="BIM专业技术支持"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/mainText14sp" />

        <TextView
            android:id="@+id/recommend_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layoutMargin6dp"
            android:layout_toEndOf="@+id/recommend_nicename"
            android:background="@color/orange"
            android:paddingStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_1"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_1"
            android:singleLine="true"
            android:text="专家"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin4dp"
            android:layout_toEndOf="@+id/recommend_avatar"
            android:singleLine="true"
            android:text="来自同行推荐"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/recommend_add"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/layoutMargin16dp"
            android:background="@drawable/btn_corner_shape"
            android:gravity="center"
            android:singleLine="true"
            android:text="添加"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/seal_bg" />
</LinearLayout>