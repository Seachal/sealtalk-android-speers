<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="56dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.allen.library.SuperTextView
            android:id="@+id/myOrderStv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonBangHeight"
            android:paddingLeft="@dimen/layoutMargin16dp"
            android:paddingRight="@dimen/layoutMargin16dp"
            app:sDividerLineType="bottom"
            app:sLeftIconRes="@mipmap/personal_fragment_helper"
            app:sLeftTextSize="@dimen/mainText14sp"
            app:sLeftTextString="同行求助"
            app:sRightIconRes="@mipmap/arrow_right_red" />

        <TextView
            android:id="@+id/redTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="60dp"
            android:background="@drawable/shape_round_tv_bg"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/subMainText"
            android:visibility="invisible" />
    </FrameLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/myInviteCodeStv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@mipmap/personal_fragment_tag"
        app:sLeftTextSize="@dimen/mainText14sp"
        app:sLeftTextString="我的标签"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/settingStv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@mipmap/personal_fragment_ad"
        app:sLeftTextSize="@dimen/mainText14sp"
        app:sLeftTextString="我的广告"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/aboutMeStv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@mipmap/personal_fragment_album"
        app:sLeftTextSize="@dimen/mainText14sp"
        app:sLeftTextString="我的相册"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/helpStv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@mipmap/personal_fragment_service"
        app:sLeftTextSize="@dimen/mainText14sp"
        app:sLeftTextString="我的客服"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/volumeStv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        android:visibility="gone"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@mipmap/personal_order_returned_icon"
        app:sLeftTextSize="@dimen/mainText14sp"
        app:sLeftTextString="我的收藏"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/logoutStv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        android:visibility="visible"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@mipmap/personal_fragment_signup"
        app:sLeftTextSize="@dimen/mainText14sp"
        app:sLeftTextString="退出登陆"
        app:sRightIconRes="@mipmap/arrow_right_red" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/user_fragment_list_bg">

        <LinearLayout
            android:id="@+id/aboutAppLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/copyright_text"
            android:layout_centerHorizontal="true"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_agree_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《服务协议》"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/seal_login_fragment_login_btn_agree_size" />

            <TextView
                android:id="@+id/btn_agree_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"
                android:textSize="@dimen/seal_login_fragment_login_btn_agree_size" />

            <TextView
                android:id="@+id/btn_agree_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/seal_login_fragment_login_btn_agree_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/copyright_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/layoutMargin16dp"
            android:singleLine="true"
            android:text="Copyright 2018 - 2020 91bim.net All Rights Reserved"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>

</LinearLayout>