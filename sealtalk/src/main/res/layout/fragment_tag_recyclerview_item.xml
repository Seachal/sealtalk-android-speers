<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:orientation="horizontal">

        <com.allen.library.SuperTextView
            android:id="@+id/tag_super_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/titleBarHeight"
            app:sDividerLineType="none"
            app:sLeftTextString="我的行业"
            app:sRightIconRes="@mipmap/arrow_right_red"
            app:sRightTextString="行业"
            app:sRightViewMarginLeft="@dimen/headerTop" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/user_fragment_list_bg" />

</LinearLayout>
