<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="130dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shop_title_text_bg_garend_white_bgdd"
        android:padding="28dp"
        android:text="商品已成功加入购物车！"
        android:textColor="@color/textColorPrimary" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_radius_white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mcart_confirm_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="再逛逛"
            android:textColor="@color/white"
            android:textSize="@dimen/mainText14sp" />

        <Button
            android:id="@+id/mcart_confirm_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@color/home_title_color"
            android:gravity="center"
            android:text="去购物车"
            android:textColor="@color/white"
            android:textSize="@dimen/mainText14sp" />


    </LinearLayout>
</LinearLayout>