<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/layoutMargin8dp"
    android:paddingEnd="@dimen/layoutMargin8dp"
    android:paddingBottom="@dimen/layoutMargin8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layoutMargin8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="2"
            android:text="个人名称" />

        <EditText
            android:id="@+id/invoice_edit_title"
            style="@style/autho_et_style"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="在此输入《个人》或您的姓名" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin4dp"
        android:layout_marginTop="@dimen/dp_20"
        android:text="发票内容"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/mainText14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layoutMargin16dp"
        android:layout_marginTop="@dimen/layoutMargin8dp"
        android:layout_marginEnd="@dimen/layoutMargin16dp"
        android:layout_marginBottom="@dimen/margin4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/layoutMargin8dp"
            android:background="@drawable/border_light_red_normal"
            android:gravity="center"
            android:text="商品明细"
            android:textColor="@color/light_red" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/layoutMargin8dp"
            android:background="@drawable/btn_light_gray_shape"
            android:gravity="center"
            android:text="商品类别"
            android:textColor="@color/gray_color" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="发票内容将显示详细订单名称与价格信息，发票金额为您实际支付的金额，不含虚拟资产和优惠金额"
        android:textColor="@color/color_gray_text"
        android:textSize="@dimen/callkit_dimen_size_12" />


</LinearLayout>