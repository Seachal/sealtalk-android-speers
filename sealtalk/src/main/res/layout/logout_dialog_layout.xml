<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="130dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shop_title_text_bg_garend_white_bgdd"
        android:padding="30dp"
        android:text="确认要退出当前登录吗?"
        android:textColor="@color/textColorPrimary" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_radius_gradent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loginoutTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/layoutMargin16dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/mainText14sp" />


    </LinearLayout>
</LinearLayout>