<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.allen.library.SuperTextView
        android:id="@+id/my_discovery_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@drawable/seal_ic_pop_search"
        app:sLeftTextString="搜索好友"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/my_discovery_chat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@drawable/seal_ic_pop_chat"
        app:sLeftTextString="@string/seal_main_title_start_chat"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/my_discovery_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@drawable/seal_ic_pop_group"
        app:sLeftTextString="@string/seal_main_title_create_group"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/my_discovery_friend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@drawable/seal_ic_pop_add"
        app:sLeftTextString="@string/seal_main_title_add_friends"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <com.allen.library.SuperTextView
        android:id="@+id/my_discovery_scan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonBangHeight"
        android:paddingLeft="@dimen/layoutMargin16dp"
        android:paddingRight="@dimen/layoutMargin16dp"
        app:sDividerLineType="bottom"
        app:sLeftIconRes="@drawable/seal_ic_pop_scaned"
        app:sLeftTextString="@string/seal_main_title_scan"
        app:sRightIconRes="@mipmap/arrow_right_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/seal_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:text="@string/common_chat_room"
                android:textColor="@color/color_black_text"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:id="@+id/discovery_ll_chat_room_1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/seal_bg_list_item"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@drawable/discovery_ic_chat_room_1"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="@string/discovery_chat_room_one"
                android:textColor="@color/color_black_text" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:id="@+id/discovery_ll_chat_room_2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/seal_bg_list_item"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@drawable/discovery_ic_chat_room_2"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="@string/discovery_chat_room_two"
                android:textColor="@color/color_black_text" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:id="@+id/discovery_ll_chat_room_3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/seal_bg_list_item"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@drawable/discovery_ic_chat_room_3"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="@string/discovery_chat_room_three"
                android:textColor="@color/color_black_text" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:id="@+id/discovery_ll_chat_room_4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/seal_bg_list_item"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@drawable/discovery_ic_chat_room_4"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="@string/discovery_chat_room_four"
                android:textColor="@color/color_black_text" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>