<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/circle_item_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/circle_tittle"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/circle_header_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@color/seal_bg"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3">

                <TextView
                    android:id="@+id/nameTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="最新课程！"
                    android:textColor="@color/red_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/urlTipTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="《机电管线支吊架安装BIM》上线！"
                    android:textColor="@color/color_232323"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/circle_header_demand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@color/seal_bg"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3">

                <TextView
                    android:id="@+id/nameTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="最新求助！"
                    android:textColor="@color/red_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/urlTipTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Revit幕墙问题，100元酬劳！"
                    android:textColor="@color/color_232323"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/circle_header_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@color/seal_bg"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:visibility="gone">

                <TextView
                    android:id="@+id/nameTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="最新书籍！"
                    android:textColor="@color/red_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/urlTipTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="《装配式建筑BIM设计》上架！"
                    android:textColor="@color/color_232323"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/contentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="59分钟前"
                    android:textColor="@color/color_aeaeae"
                    android:textSize="12sp" />
                <!-- 不同的地方 -->

                <Button
                    android:id="@+id/circleMoreBtn"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/seal_new_friend_add_friend_selector"
                    android:text="更多"
                    android:textColor="@color/light_red" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/lin"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="1px"
        android:background="@color/im_line_color"
        android:visibility="visible" />

</LinearLayout>