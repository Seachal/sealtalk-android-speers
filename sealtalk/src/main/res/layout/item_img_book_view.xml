<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_smeta"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@color/line"
            android:scaleType="centerCrop"
            android:src="@drawable/votebook" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_2"
            android:layout_toRightOf="@+id/item_smeta"
            android:maxLines="3"
            android:text="精品课程BIM教学"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_toRightOf="@+id/item_smeta"
            android:gravity="center"
            android:text="¥42.22元"
            android:textColor="@color/seal_update_name_tips"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/item_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_2"
            android:layout_toRightOf="@+id/item_smeta"
            android:gravity="center"
            android:singleLine="true"
            android:text="19条好评"
            android:textSize="@dimen/sp_12" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>