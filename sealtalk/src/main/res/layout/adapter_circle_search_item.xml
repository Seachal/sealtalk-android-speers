<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_headIV"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="10dip"
            android:scaleType="fitCenter"
            android:src="@drawable/im_pub_no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="小明"
                    android:textColor="@color/color_8290AF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/search_timeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/layoutMargin8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="2020-02-02"
                    android:textColor="@color/color_aeaeae"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/search_titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/search_nameTV"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="同行圈标题"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layoutMargin8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/search_bodyIV"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/im_pub_no_image" />

                <ImageView
                    android:id="@+id/search_bodyIV1"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/im_pub_no_image" />

                <ImageView
                    android:id="@+id/search_bodyIV2"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/im_pub_no_image" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/lin"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="1px"
        android:background="@color/im_line_color"
        android:visibility="visible" />

</LinearLayout>