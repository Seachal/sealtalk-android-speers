<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/smetaImg"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/tweetName1"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【求购】需要各种特种钢材"
            android:layout_toRightOf="@+id/smetaImg"/>

        <TextView
            android:id="@+id/tweetText1"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湖北省-十堰市"
            android:layout_below="@+id/tweetName1"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/smetaImg"
            android:paddingRight="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tweetText2"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面议"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/tweetText1"
            android:layout_marginTop="4dp"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/smetaImg"
            android:paddingRight="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tweetWatch"
            android:textSize="@dimen/sp_12"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112人浏览"
            android:layout_margin="20dp"
            android:layout_toRightOf="@+id/tweetText2"
            android:layout_alignBaseline="@+id/tweetText2"
            android:layout_alignBottom="@+id/tweetText2"/>

        <TextView
            android:id="@+id/tweetText3"
            android:layout_margin="@dimen/layoutMargin8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="询底价"
            android:background="@drawable/conbtn_bg"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:layout_alignBaseline="@+id/tweetText2"
            android:layout_alignBottom="@+id/tweetText2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
