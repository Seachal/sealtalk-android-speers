<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="#fff"
        android:orientation="horizontal">

        <com.caesar.rongcloudspeed.ui.widget.SelectableRoundedImageView
            android:id="@+id/search_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="6dp"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="3dip"
            app:sriv_left_top_corner_radius="3dip"
            app:sriv_right_bottom_corner_radius="3dip"
            app:sriv_right_top_corner_radius="3dip" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/default_main_text"
                android:textSize="18dp"
                tools:text="NickName" />

            <TextView
                android:id="@+id/search_sealtalk_acctount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/default_sub_text"
                android:textSize="16dp"
                tools:text="同业快线号：sealtalk" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/seal_ic_rp_arrow" />


    </LinearLayout>

    <Button
        android:id="@+id/profile_btn_detail_tra_friend"
        style="@style/seal_profile_user_detail_btn"
        android:background="@drawable/profile_btn_contact_blue_selector"
        android:text="@string/seal_trans"
        android:textColor="@color/white"
        android:visibility="visible" />

</LinearLayout>
