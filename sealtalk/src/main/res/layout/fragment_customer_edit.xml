<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_line_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.allen.library.SuperTextView
            android:id="@+id/myAccountStar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonBangHeight"
            android:paddingLeft="@dimen/layoutMargin16dp"
            android:paddingRight="@dimen/layoutMargin16dp"
            app:sDividerLineType="bottom"
            app:sLeftTextString="客服电话"
            app:sRightIconRes="@mipmap/arrow_right_red"
            app:sRightTextColor="@color/colorAccent"
            app:sRightTextString="13775635635" />

        <com.allen.library.SuperTextView
            android:id="@+id/myAccountReview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonBangHeight"
            android:paddingLeft="@dimen/layoutMargin16dp"
            android:paddingRight="@dimen/layoutMargin16dp"
            app:sDividerLineType="bottom"
            app:sLeftTextString="客服微信"
            app:sRightTextString="小弘子"
            app:sRightIconRes="@mipmap/arrow_down_red"
            app:sRightTextColor="@color/colorAccent" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wechat_img20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/user_fragment_list_bg" />

    </LinearLayout>

</LinearLayout>