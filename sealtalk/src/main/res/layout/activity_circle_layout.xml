<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlAccentColor="@color/colorPrimary"
    app:srlPrimaryColor="@color/white">

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:background="@color/white"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/headIv"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="10dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_launcher" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_marginRight="10dip"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nameTv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="最新课程！"
                                android:textColor="@color/red_dark"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/urlTipTv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="《机电管线支吊架安装BIM》上线！"
                                android:textColor="@color/color_232323"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nameTv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="最新求助！"
                                android:textColor="@color/red_dark"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/urlTipTv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="Revit幕墙问题，100元酬劳！"
                                android:textColor="@color/color_232323"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nameTv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="最新书籍！"
                                android:textColor="@color/red_dark"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/urlTipTv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="《装配式建筑BIM设计》上架！"
                                android:textColor="@color/color_232323"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/contentTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="59分钟前"
                                android:textColor="@color/color_aeaeae"
                                android:textSize="14sp" />
                            <!-- 不同的地方 -->

                            <Button
                                android:id="@+id/circleBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/gradent_btn_bg"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingTop="5dip"
                                android:paddingEnd="@dimen/dp_20"
                                android:paddingBottom="5dip"
                                android:text="更多"
                                android:textColor="@color/white" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/lin"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="1px"
                    android:background="@color/im_line_color"
                    android:visibility="visible" />


            </LinearLayout>

            <View
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="#00ffffff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/shop_title_text_bg"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="12dip"
                    android:paddingRight="12dip"
                    android:src="@drawable/add" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="12dip"
                    android:paddingRight="12dip"
                    android:src="@drawable/ease_mm_title_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/text_bottom_line"
                    android:gravity="center_vertical"
                    android:text="同行圈"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/titleTextSize16sp" />


            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:background="@color/white"
            android:paddingTop="@dimen/layoutMargin16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>