<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".circle.ui.FriendCircleActivity">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tittle">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="210dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/timg_bg" />


                <com.caesar.rongcloudspeed.widget.MyListView
                    android:id="@+id/circleLv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/img_bg"
                    android:layout_marginTop="35dip"
                    android:background="@color/white"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@null"
                    android:dividerHeight="0px"
                    android:fadingEdge="none"
                    android:fadingEdgeLength="0dp"
                    android:focusable="true"
                    android:listSelector="@android:color/transparent"
                    android:transcriptMode="normal" />

                <com.caesar.rongcloudspeed.circle.widgets.CircularImage
                    android:id="@+id/photo"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="170dip"
                    android:layout_marginRight="20dip"
                    android:src="@drawable/add_friend_ic_wechat" />

                <LinearLayout
                    android:id="@+id/editTextBodyLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#f6f6f6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/circleEt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="说点什么..." />

                    <TextView
                        android:id="@+id/sendTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:text="发送"
                        android:textSize="16sp" />
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:src="@drawable/add" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:src="@drawable/ease_mm_title_back" />

</RelativeLayout>