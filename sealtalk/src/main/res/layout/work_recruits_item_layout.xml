<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin4dp">

            <TextView
                android:id="@+id/recruit_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:layout_toStartOf="@+id/recruit_area_text"
                android:maxLines="2"
                android:text="高薪直聘房产设计者"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/recruit_salary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recruit_name_text"
                android:layout_margin="@dimen/dp_2"
                android:text="8000~12000元/月"
                android:textColor="@color/red_dark"
                android:textSize="@dimen/mainText14sp" />

            <TextView
                android:id="@+id/recruit_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/dp_2"
                android:text="无锡市-全境"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/recruit_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recruit_name_text"
                android:layout_margin="@dimen/margin4dp"
                android:layout_toEndOf="@+id/recruit_salary_text"
                android:text="职位-全职招聘"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/diment32dp"
                android:layout_height="@dimen/diment32dp"
                android:layout_below="@+id/recruit_area_text"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/recruit_salary_text"
                android:src="@mipmap/recruits_care" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/layoutMargin6dp"
            android:layout_marginEnd="@dimen/layoutMargin6dp"
            android:background="@color/graye3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin4dp">

            <TextView
                android:id="@+id/recruit_company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:text="无锡市龙创文化传媒有限公司"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/mainText14sp" />

            <ImageView
                android:layout_width="@dimen/layoutMargin16dp"
                android:layout_height="@dimen/layoutMargin16dp"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toEndOf="@+id/recruit_company_text"
                android:src="@mipmap/recruit_auth" />

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>